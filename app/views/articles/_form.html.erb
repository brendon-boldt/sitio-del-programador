<% if @article.new_record? %>
  <% path = articles_path %>
<% else %>
  <% path = article_path %>
<% end %>

<%= form_for(@article, url: path) do |f| %>

  <% if @article.errors.any? %>
    <div id="error_exploration" %>
      <br>
      <b><%= pluralize(@article.errors.count, "error") %> prohibited this article from being created.</b>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

